<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/daysRecycleView" />-->

    <ImageView
        android:id="@+id/currentWeatherImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browseInternet"
        app:srcCompat="@drawable/ic_cloudy" />

    <TextView
        android:id="@+id/browseInternet"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/browseInternet"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cityView" />

    <TextView
        android:id="@+id/temperatureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/temperatureImg"
        app:layout_constraintTop_toBottomOf="@+id/browseInternet"
        tools:text="-25 C" />

    <ImageView
        android:id="@+id/temperatureImg"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/currentWeatherImg"
        app:layout_constraintTop_toBottomOf="@+id/browseInternet"
        app:srcCompat="@drawable/ic_cold" />
</androidx.constraintlayout.widget.ConstraintLayout>